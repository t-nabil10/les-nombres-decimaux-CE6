    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Définir les dates par défaut
            const today = new Date();
            const formattedDate = today.toISOString().split('T')[0];
            document.getElementById('date-attestation').value = formattedDate;
            
            // Calculer une date d'embauche par défaut (il y a 1 an)
            const oneYearAgo = new Date();
            oneYearAgo.setFullYear(today.getFullYear() - 1);
            const formattedOneYearAgo = oneYearAgo.toISOString().split('T')[0];
            document.getElementById('date-embauche').value = formattedOneYearAgo;
            
            // Éléments du DOM
            const form = document.getElementById('attestation-form');
            const genererBtn = document.getElementById('generer-btn');
            const telechargerBtn = document.getElementById('telecharger-btn');
            const typeAttestation = document.getElementById('type-attestation');
            
            // Fonction de génération de l'attestation
            genererBtn.addEventListener('click', function() {
                // Récupérer les valeurs du formulaire
                const nom = document.getElementById('nom').value;
                const profession = document.getElementById('profession').value;
                const salaire = document.getElementById('salaire').value;
                const dateEmbauche = document.getElementById('date-embauche').value;
                const dateAttestation = document.getElementById('date-attestation').value;
                const entreprise = document.getElementById('entreprise').value;
                const adresseEntreprise = document.getElementById('adresse-entreprise').value;
                const type = typeAttestation.value;
                
                // Formater les dates
                const dateEmbaucheFormatted = formatDate(dateEmbauche);
                const dateAttestationFormatted = formatDate(dateAttestation);
                
                // Mettre à jour l'aperçu
                document.getElementById('preview-nom').textContent = nom;
                document.getElementById('preview-profession').textContent = profession;
                document.getElementById('preview-salaire').textContent = parseFloat(salaire).toLocaleString('fr-FR');
                document.getElementById('preview-embauche').textContent = dateEmbaucheFormatted;
                document.getElementById('preview-entreprise').textContent = entreprise;
                document.getElementById('preview-adresse').textContent = adresseEntreprise;
                document.getElementById('preview-date').textContent = `Date: ${dateAttestationFormatted}`;
                document.getElementById('preview-date-finale').textContent = dateAttestationFormatted;
                
                // Mettre à jour le titre selon le type d'attestation
                let titre = '';
                if (type === 'salaire') {
                    titre = 'Attestation de Salaire';
                } else if (type === 'travail') {
                    titre = 'Attestation de Travail';
                } else {
                    titre = 'Attestation de Salaire et de Travail';
                }
                document.getElementById('preview-title').textContent = titre;
                
                // Mettre à jour le contenu selon le type d'attestation
                let contenu = '';
                if (type === 'salaire') {
                    contenu = `
                        <p>L'entreprise <span>${entreprise}</span>, située à <span>${adresseEntreprise}</span>,</p>
                        <p>atteste que Monsieur/Madame <span>${nom}</span>,</p>
                        <p>perçoit un salaire mensuel brut de <span>${parseFloat(salaire).toLocaleString('fr-FR')}</span> €.</p>
                        <p>La présente attestation est délivrée pour servir et valoir ce que de droit.</p>
                    `;
                } else if (type === 'travail') {
                    contenu = `
                        <p>L'entreprise <span>${entreprise}</span>, située à <span>${adresseEntreprise}</span>,</p>
                        <p>atteste que Monsieur/Madame <span>${nom}</span>,</p>
                        <p>occupe le poste de <span>${profession}</span> au sein de notre société depuis le <span>${dateEmbaucheFormatted}</span>.</p>
                        <p>La présente attestation est délivrée pour servir et valoir ce que de droit.</p>
                    `;
                } else {
                    contenu = `
                        <p>L'entreprise <span>${entreprise}</span>, située à <span>${adresseEntreprise}</span>,</p>
                        <p>atteste que Monsieur/Madame <span>${nom}</span>,</p>
                        <p>occupe le poste de <span>${profession}</span> au sein de notre société depuis le <span>${dateEmbaucheFormatted}</span>.</p>
                        <p>Son salaire mensuel brut s'élève à <span>${parseFloat(salaire).toLocaleString('fr-FR')}</span> €.</p>
                        <p>La présente attestation est délivrée pour servir et valoir ce que de droit.</p>
                    `;
                }
                
                document.getElementById('preview-content').innerHTML = contenu;
                
                // Activer le bouton de téléchargement
                telechargerBtn.disabled = false;
            });
            
            // Fonction de formatage de date
            function formatDate(dateString) {
                const date = new Date(dateString);
                const options = { day: 'numeric', month: 'long', year: 'numeric' };
                return date.toLocaleDateString('fr-FR', options);
            }
            
            // Fonction de téléchargement (simulée)
            telechargerBtn.addEventListener('click', function() {
                alert('Fonctionnalité de téléchargement PDF à implémenter. Dans une application réelle, cette fonction générerait un PDF téléchargeable.');
                // Ici, vous pourriez utiliser une bibliothèque comme jsPDF pour générer un PDF
                // window.jsPDF = window.jspdf.jsPDF;
                // const doc = new jsPDF();
                // doc.html(document.getElementById('attestation-preview'), {
                //     callback: function(doc) {
                //         doc.save('attestation.pdf');
                //     },
                //     x: 10,
                //     y: 10
                // });
            });
        });
    </script>
